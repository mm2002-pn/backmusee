{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.3 || ^8.0",
        "appslabke/lara-izitoast": "^1.1",
        "barryvdh/laravel-dompdf": "^2.0",
        "doctrine/dbal": "^3.0",
        "fideloper/proxy": "^4.2",
        "guzzlehttp/guzzle": "^6.3",
        "h4cc/wkhtmltoimage-amd64": "0.12.x",
        "h4cc/wkhtmltopdf-amd64": "0.12.x",
        "inertiajs/inertia-laravel": "^0.2.4",
        "kwn/number-to-words": "^1.10",
        "laravel/framework": "^8.26.1",
        "laravel/jetstream": "^1.5",
        "laravel/sanctum": "^2.15",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^3.4",
        "maatwebsite/excel": "^3.1",
        "phpoffice/phpspreadsheet": "^1.16",
        "predis/predis": "^1.1",
        "rebing/graphql-laravel": "^5.1",
        "sentry/sentry-laravel": "^2.4",
        "simplesoftwareio/simple-qrcode": "^4.2",
        "spatie/laravel-permission": "^3.13",
        "symfony/process": "^5.4",
        "tightenco/ziggy": "^0.9.4"
    },
    "require-dev": {
        "facade/ignition": "^2.3.6",
        "laravel/breeze": "^1.10",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helpers/functions.php",
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "config-server-base": [
            "cp GraphQLController_local.php vendor/rebing/graphql-laravel/src/GraphQLController.php",
            "sudo chmod -R 777 storage/ bootstrap/cache",
            "rm -rf bootstrap/cache/* storage/framework/views/*",
            "php artisan clear-compiled",
            "composer dumpautoload",
            "php artisan config:clear",
            "php artisan config:cache",
            "mkdir -p public/uploads/clients  public/uploads/icons public/uploads/pointdeventes public/uploads/icons public/uploads/da public/uploads/icons public/uploads/soumission public/uploads/zones public/uploads/users",
            "sudo chmod -R 777 public/uploads/ storage/ bootstrap/cache"
        ],
        "config-server-backmusee": [
            "@config-server-base",
            "sudo chown -R www-data:www-data storage bootstrap/cache"
        ],
        "config-server-mac": [
            "@config-server-base",
            "sudo chown -R _www:_www storage bootstrap/cache"
        ],
        "config-server-linux": [
            "cp GraphQLController_local.php vendor/rebing/graphql-laravel/src/GraphQLController.php",
            "@config-server-backmusee",
            "sudo chmod -R 777 public/uploads/"
        ],
        "config-server-windows": [
            "cp GraphQLController_local.php vendor/rebing/graphql-laravel/src/GraphQLController.php",
            "@config-server-base"
        ],
        "update-server-base": [
            "git fetch --all",
            "git reset --hard origin/develop",
            "git pull --ff-only",
            "@config-server-backmusee"
        ],
        "update-server-backmusee": [
            "@update-server-base",
            "cp .env.server .env",
            "php artisan config:cache",
            "cp laravel-echo-server_server.json laravel-echo-server.json"
        ],
        "update-server-backmusee-test": [
            "@update-server-base",
            "cp .env.server-test .env",
            "php artisan config:cache",
            "cp laravel-echo-server_server.json laravel-echo-server.json"
        ],
        "start": [
            "gulp"
        ],
        "after-dump": [
            "php artisan migrate && php artisan db:seed "
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
